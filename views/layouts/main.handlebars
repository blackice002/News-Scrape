    <style>
        body {
            font-family: 'Abel', sans-serif;
            color: white;
        }

        .shadowed {
            text-shadow: 2px 2px 4px #000000;
        }

        .bannertext {
            font-size: 5rem;
        }

        .bg-banner {
            background-color: #e9e9e9;
            background-image: linear-gradient(315deg, #e7e7e7 0%, #a5a5a5 74%);
        }
        
        .bg-banner2 {
            background-color: #e6e6e6;
            background-image: linear-gradient(315deg, #d3d3d3 0%, #fff1f1 74%);
        }
        
        .montfont {
            font-family: 'Montserrat', sans-serif;
        }
        
        .form-group {
            font-weight: bolder;
        }
        
        .container {
            width:95% !important;
            background-color: rgba(226, 226, 226, 0.822);
        }
        
        button:hover {
            background-color: #e9bcb7;
            background-image: linear-gradient(315deg, #151616 0%, #423d3d 74%);
            -webkit-background-clip: border-box;
            background-clip: border-box;
            color: rgb(190, 190, 190);
            font-weight: bolder;
            font-family: 'Faster One', cursive;
            text-shadow: 2px 2px 4px #000000;
        }

        #myVideo {
            position: fixed;
            right: 0;
            bottom: 0;
            min-width: 100%; 
            min-height: 100%;
        }
    </style>
</head>

