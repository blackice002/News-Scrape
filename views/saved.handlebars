  
  <div class="container">
    <div class="bg-banner col-md-12 mb-2">
        <span class="mb-0 bannertext">Android <span class="text-uppercase " style="color:red">News</span> Scraper</span>
    </div>
    <div class="d-flex justify-content-between">
        <a href="/" action="button" class="btn btn-sm  btn-light">Home</a>
        <a href="/saved" action="button" class="btn btn-sm btn-light">Saved Article</a>
        <a href="/clear" action="button" class="btn btn-sm btn-light">Clear Data</a>
</div>
  
<div class="container">
  <h3>Saved articles</h3>
 {{#each allArticle}}
        <div class="row m-1">
            <div class="align-self-center col-md-4 col-sm-12">
                <img class="card-img " style="width:100%" src="{{this.image}}" alt="jetsetImg">
            </div>
            <div class="col-md-8 col-sm-12">
                <div class="card-body ">
                    <h5 class="card-title" style="color:red">{{this.title}}</h5>
                    <p class="card-text overflow-hidden" style="color:black">{{this.summary}}</p>
                </div>
                <div class="text-right">
                <a data-articleId= {{this._id}} class="btn btn-light text-danger remove-btn" role="button">Remove from saved</a>
                <a data-articleId= {{this._id}} class="btn btn-light text-success note-modal-btn">Add Note</a><br />
                </div>
            </div>
        </div>
    {{/each}} 
</div>

<div id="add-note-modal" class="modal" tabindex="-1" role="dialog" data-articleId="">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="note-modal-title" class="modal-title"></h5>
      </div>
      <div class="modal-body container">
        <ul class="notes-list">
        </ul>
        <div class="form-group">
          <label for="note-area">New Note</label>
          <textarea name="new-note-area" class="form-control" id="note-body" rows="2" required></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary note-save-btn" data-dismiss="modal">Save</button>

        </div>
      </div>
    </div>
  </div>